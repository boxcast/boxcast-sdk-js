{
  "name": "boxcast-sdk-js",
  "version": "2.0.0",
  "description": "Official JavaScript SDK for the BoxCast API",
  "scripts": {
    "expose": "node scripts/unwrap.js",
    "start:dev": "webpack --mode=development --watch --progress",
    "build:prod": "webpack --mode=production",
    "prepublishOnly": "webpack --mode=production && npm run expose",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boxcast/boxcast-sdk-js.git"
  },
  "bugs": {
    "url": "https://boxcast.com",
    "email": "engineering@boxcast.com"
  },
  "homepage": "https://boxcast.com",
  "keywords": [
    "framework",
    "typescript",
    "scss",
    "npm"
  ],
  "author": {
    "name": "BoxCast Engineering",
    "email": "engineering@boxcast.com",
    "url": "https://boxcast.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/base-64": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jsdom": "^21.1.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "base-64": "^1.0.0",
    "encoding": "^0.1.13",
    "node-fetch": "^2.6.1",
    "platform": "^1.3.6",
    "qs": "^6.11.1"
  }
}
